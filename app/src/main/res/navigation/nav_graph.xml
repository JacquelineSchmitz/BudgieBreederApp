<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/oneFragment"
        android:name="de.syntaxinstitut.budgiebreeder.ui.one.OneFragment"
        android:label="OneFragment"
        tools:layout="@layout/fragment_one">
        <action
            android:id="@+id/action_oneFragment_to_twoFragment"
            app:destination="@id/twoFragment" />
    </fragment>
    <fragment
        android:id="@+id/twoFragment"
        android:name="de.syntaxinstitut.budgiebreeder.ui.two.TwoFragment"
        android:label="TwoFragment"
        tools:layout="@layout/fragment_two"/>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="de.syntaxinstitut.budgiebreeder.ui.splashScreen.SplashScreenFragment"
        android:label="SplashScreenFragment" >
        <action
            android:id="@+id/action_splashScreenFragment_to_oneFragment"
            app:destination="@id/oneFragment" />
    </fragment>
</navigation>